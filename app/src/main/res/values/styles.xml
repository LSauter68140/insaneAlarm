<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alarmSettingPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="alarmSoundFlashMode" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">-10dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/play_pause_toogle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="playPauseToggleBtn" parent='android:Theme.DeviceDefault'>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>

</resources>