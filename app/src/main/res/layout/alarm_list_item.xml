<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="191dp"
        android:layout_height="92dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listItemNextRingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listItemFrequency"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text=""
            android:textAlignment="textStart"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listItemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarmType_temp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:baselineAligned="true"
        android:gravity="top|end"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/listItemActivateAlarm"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:checked="false"
            android:foregroundGravity="center_horizontal"
            android:minHeight="48dp"
            android:textSize="20sp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ImageButton
            android:id="@+id/listItemSettingBtn"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/roundcorner"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/listitemsetting"
            android:minWidth="28dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_more_vert_24" />


    </LinearLayout>

</LinearLayout>